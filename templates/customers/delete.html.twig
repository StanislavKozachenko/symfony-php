{% extends "/user/user.html.twig" %}
{% set _currentPage = app.request.query.get('p') ?: 1 %}
{% block selected %}
    <form action="/menu/customer/delete?p={{ _currentPage }}" name="customer_delete" method="post">
        <div class="delete_customer">
            <p>Delete customer</p>
            <div class="flex-row flex">
                {% for customer in customers %}
                    <div class="m-5 product-block edit_block">
                        <ul class="text-sm-left">
                            <li id="product-id"><span class="font-weight-bold">#</span>{{ customer.id }}</li>
                            <hr>
                            <li><input class="font-weight-bold" value="{{ customer.name }}"></li>
                            <li>Delete <input type="checkbox" name="checkboxes[]" value="{{ customer.id }}"></li>
                        </ul>
                    </div>
                {% endfor %}
            </div>
            <div class="container pagination">
                {% include "paginate/pagination.html.twig" %}
            </div>
            <button type="submit">Delete</button>
        </div>
    </form>
{% endblock %}