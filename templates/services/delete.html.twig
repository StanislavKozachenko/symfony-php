{% extends "/user/user.html.twig" %}
{% set _currentPage = app.request.query.get('p') ?: 1 %}
{% block selected %}
    <form action="/menu/service/delete?p={{ _currentPage }}" name="service_delete" method="post">
        <div class="delete_customer delete_service">
            <p>Delete service</p>
            <div class="flex-row flex">
                {% for service in services %}
                    <div class="m-5 product-block edit_block">
                        <ul class="text-sm-left">
                            <li id="product-id"><span class="font-weight-bold">#</span>{{ service.id }}</li>
                            <hr>
                            <li><input class="font-weight-bold" value="{{ service.name }}"></li>
                            <hr>
                            <li><input class="font-weight-bold" value="{{ service.cost }}"></li>
                            <hr>
                            <li><input class="font-weight-bold" value="{{ service.releaseDate|date('Y/m/d') }}"></li>
                            <li>Delete <input type="checkbox" name="checkboxes[]" value="{{ service.id }}"></li>
                        </ul>
                    </div>
                {% endfor %}
            </div>
            <div class="container pagination">
                {% include "paginate/pagination.html.twig" %}
            </div>
            <button type="submit">Delete</button>
        </div>
    </form>
{% endblock %}